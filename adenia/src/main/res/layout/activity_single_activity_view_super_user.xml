<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adenia.adenia.singleActivityViewSuperUser">



    <ImageView
        android:id="@+id/detailImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/saveButtonEcer" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/primary"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:title="  "
        android:contentInsetStart="0dp"
        android:contentInsetEnd="0dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar"
        android:id="@+id/linearLayout3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/saveEcer"
            android:textSize="15sp"
            android:gravity="top"
            android:layout_weight="1"
            android:background="@drawable/edittextborder"
            android:backgroundTint="@null"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:id="@+id/saveReseller"
            android:textSize="15sp"
            android:gravity="top"
            android:layout_weight="1"
            android:background="@drawable/edittextborder"
            android:backgroundTint="@null"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />




    </LinearLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:background="@drawable/edittextborder"
        android:id="@+id/saveButtonEcer"
        android:layout_marginRight="11dp"
        android:textSize="12sp"
        android:onClick="saveButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ecer"
        android:id="@+id/smallEcer"
        android:layout_alignTop="@+id/saveButtonEcer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reseller"
        android:id="@+id/smallReseller"
        android:layout_alignTop="@+id/saveButtonEcer"
        android:layout_toEndOf="@+id/saveButtonEcer"
        android:layout_marginStart="29dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="adenia.adenia.viewUser"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ecer User"
        android:paddingStart="10dp"
            android:paddingEnd="10dp"
        android:layout_weight="1"
            android:background="@drawable/edittextborder"
        android:id="@+id/ecershow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/ecer_size" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reseller User"
             android:layout_marginLeft="13dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/edittextborder"
            android:layout_weight="1"
            android:id="@+id/resellershow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/reseller_size" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/showEcer" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/showReseller"
        />



    </LinearLayout>
</RelativeLayout>




